
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="false" data-keyboard="false">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <% @questions.each do |question| %>
      <div class="item">
        <h4><%= question.label %></h4>

        <% question.iterations.each do |iteration| %>
          <% answer = iteration.answers.new %>
          <% item_answer = ItemAnswer.new %>

          <%= simple_form_for [question, iteration, item_answer] do |f| %>
            <%= f.association :item, as: :check_boxes, collection: question.items(order: 'rank'), label_method: :label, label: false, include_hidden: false %>
            <%= f.button :submit, "Suivant", remote: true, class: "btn btn-primary"  %>
            <button data-target="#carousel-example-generic" class="btn btn-primary" type="button" role="button" data-slide="next">Suivant</button>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
