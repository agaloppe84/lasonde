<% @questions.each do |question| %>
  <h4><%= question.label %></h4>

  <% question.iterations.each do |iteration| %>
    <% answer = iteration.answers.new %>
    <% item_answer = ItemAnswer.new %>

    <%= simple_form_for [question, item_answer] do |f| %>

      <%= f.association :item, as: :check_boxes, collection: question.items(order: 'rank'), label_method: :label, label: false %>
      <%= f.button :submit, "Suivant", remote: false  %>
    <% end %>

  <% end %>
<% end %>

