<ul class="list-unstyled" style=" word-wrap: break-word;">
  <% question.items.each do |item| %>
    <li>
      <% if policy(item).show? %>
        <%= "(#{item.rank}) #{item.label}" %>
      <% end %>
    </li>
    <li>
      <% if policy(item).update? %>
        <%= link_to "Edit", edit_question_item_path(question, item) %>
      <% end %>
      <% if policy(item).destroy? %>
        <%= link_to "Destroy", question_item_path(question, item), method: :delete, data: { confirm: "Are you sure ?" } %>
      <% end %>
    </li>
  <% end %>
</ul>
<% if policy(Item).create? %>
  <%= link_to "Add an item",  new_question_item_path(question) %>
<% end %>
