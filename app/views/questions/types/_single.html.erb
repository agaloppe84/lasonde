<h4 class="text-center">Single question</h4>
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <%= simple_form_for [@survey, @question] do |f| %>
      <%= f.input :label, placeholder: 'Your question here' %>
      <%= f.input :kind, as: :hidden, input_html: {value: params[:question_type]} %>
      <%= f.button :submit %>
    <% end %>
    </div>
  </div>
</div>


